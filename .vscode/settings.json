    // The port and buad rate for flashing and monitoring your device
    //"esp_device_port": "/dev/cu.usbserial-0215E868",
    "esp_device_port": "/dev/cu.usbserial-111201",
    "esp_device_baud": 921600,

     // The tools needed for building, flashing, and debugging
    // ONLY change your espressif tools path and esp-idf repo
    // location in the paths below
    "idfInstFolder": "/Users/mohamedhossam/.espressif",

    "idfFolder": "/Users/mohamedhossam/esp/esp-idf",
    
    "esp_python_bin": "${config:idfInstFolder}/python_env/idf4.4_py3.9_env/bin",

    "esp_idf_command": "${config:esp_python_bin}/python ${config:idfFolder}/tools/idf.py",

    "esp_elf_bin": "${config:idfInstFolder}/tools/xtensa-esp32-elf/esp-2021r2-patch3-8.4.0/xtensa-esp32-elf/bin",

    "esp_elf_binutils": "${config:idfInstFolder}/tools/esp32ulp-elf/2.28.51-esp-20191205/esp32ulp-elf-binutils/bin",

    "openocd_root_dir": "${config:idfInstFolder}/tools/openocd-esp32",

    "esp_openocd_bin": "${config:idfInstFolder}/tools/openocd-esp32/bin",

    "esp_extra_paths": "/bin:/usr/local/bin:${config:esp_python_bin}:/usr/bin:${config:esp_elf_bin}:${config:esp_elf_binutils}:${config:esp_openocd_bin}",

    "esp_gdb": "${esp_elf_bin}/xtensa-esp32-elf-gdb",
    "git.ignoreLimitWarning": true,
    "files.watcherExclude": {
        "**/target": true
    },
    "idf.adapterTargetName": "esp32",
    "idf.flashType": "JTAG",

